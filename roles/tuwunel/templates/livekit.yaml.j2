port: {{ livekit.ports.http }}
bind_addresses:
  - ""

rtc:
    node_ip: "{{ ansible_default_ipv4.address }}"
    tcp_port: {{ livekit.ports.tcp }}
    port_range_start: {{ livekit.ports.udp_start }}
    port_range_end: {{ livekit.ports.udp_end }}
    use_external_ip: true
    enable_loopback_candidate: false
    packet_buffer_size_video: 700
    packet_buffer_size_audio: 400
    pli_throttle:
      low_quality: 250ms
      mid_quality: 650ms
      high_quality: 650ms
    batch_io:
      batch_size: 128
      max_flush_interval: 2ms          
    turn_servers:
    - host: {{ coturn.domain }}
      port: 3478
      protocol: udp
      secret: "{{ coturn.auth_secret}}"

keys:
  {{ livekit.key }}: {{ livekit.secret }}

# Logging
logging:
    level: {{ livekit.log_level }}
    sample: false

# TURN отключен
turn:
    enabled: false